<li>
  <i class="fa fa-user-times bg-red"></i>
  <div class="timeline-item">
    <div class="box box-widget">
      <div class="box-header with-border">
        <div class="user-block">
          <%= show_profile_img(activity.owner, 'medium', "img-circle img-bordered-sm") %>
          <span class="username"><a href="#"><%= link_to activity.owner.profile.firstname, profile_path(activity.owner) %></a></span>
          <span class="description"> <%= time_ago_in_words(activity.created_at, include_seconds: true) %></span>
        </div>
      </div>
      <div class="box-body">
        <p>
          <% if activity.trackable %>
              <%= t'notifications.event.leaved_event' %> <%= link_to "#{activity.trackable.title}", event_path(activity.trackable) %>
          <% else %>
              <%= t'notifications.event.leaved_event_which_has_since_been_removed' %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</li>
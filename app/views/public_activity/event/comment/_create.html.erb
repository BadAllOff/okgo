<li>
  <i class="fa fa-comment-o bg-blue-active"></i>
  <div class="timeline-item">
    <div class="box box-widget">
      <div class="box-header with-border">
        <div class="user-block">
          <%= image_tag(activity.owner.profile.photo.url('medium'), class: 'img-circle img-bordered-sm', alt: 'User Avatar') %>
          <span class="username"><a href="#"><%= link_to activity.owner.profile.firstname, profile_path(activity.owner) %></a></span>
          <span class="description">Shared publicly - <%= time_ago_in_words(activity.created_at, include_seconds: true) %></span>
        </div>
      </div>
      <div class="box-body">
        <p>
          <% if activity.trackable %>
              <%= t'notifications.event.comment.commented_to_event' %> <%= link_to "#{activity.trackable.title}", event_path(activity.trackable) %>
          <% else %>
              <%= t'notifications.event.comment.commented_to_event_which_has_since_been_removed' %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</li>
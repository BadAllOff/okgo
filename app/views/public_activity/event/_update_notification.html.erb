<li>
  <div class="pull-left user-block col-xs-2">
    <%= show_profile_img(activity.owner, 'small', "bg-green", "", false) %>
  </div>
  <div class="col-xs-10">
    <%= render partial: 'shared/notifications/header', locals: { activity: activity } %>
    <p>
      <% if activity.trackable %>
          <%= t'notifications.event.updated_an_event' %> <%= link_to "#{activity.trackable.title}", event_path(activity.trackable) %>
      <% else %>
          <%= t'notifications.event.updated_an_event_which_has_since_been_removed' %>
      <% end %>
    </p>
    <p class="clearfix"></p>
  </div>
</li>
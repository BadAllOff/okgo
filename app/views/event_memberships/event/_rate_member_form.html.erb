<%= form_tag rate_event_membership_path(member),
             method: :post,
             class: "submit-rate form-horizontal",
             remote: true,
             data:
                 {
                     format: :json,
                     id: "rate-user-#{member.id}"
                 } do %>
    <div class="flash_msg"><span class="text-muted"><%= t('events.rate_members.pull_the_ring_in_need_direction_to_indicate_rating_of_member_then_push_the_rate_member_button') %></span></div>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-6 text-center">
      <%= text_field_tag :language_level, language, class: 'jknob',
                         data: {
                             min: 1,
                             max: 100,
                             fgColor: '#3c8dbc',
                             width: 90,
                             height:90
                         } %>
      <div class="knob-label"><%= t('events.rate_members.language_level') %></div>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-6 text-center">
      <%= text_field_tag :activity_level, activity, class: 'jknob',
                         data: {
                             min: 1,
                             max: 100,
                             fgColor: '#f56954',
                             width: 90,
                             height:90
                         } %>
      <div class="knob-label"><%= t('events.rate_members.activity_level') %></div>
    </div>

    <div class="clearfix"></div>

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-12">
      <%= submit_tag t('events.rate_members.rate_btn'), class: 'btn btn-primary rate_user_submit_btn center-block' %>
    </div>
<% end %>
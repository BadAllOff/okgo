<%= form_for(feedback) do |f| %>
  <% if feedback.errors.any? %>
      <%= render 'shared/errors', object: feedback %>
  <% end %>

    <% opts = [positive: [name: 'Positive', id: 'positive'], negative:  [name: 'Negative', id: 'negative'], suggestion:  [name: 'Suggestion', id: 'suggestion']] %>
  <div class="field form-group">
    <%= f.label :status %>
    <%= select_tag "feedback[status]", "<option value='positive'>#{t'feedbacks.feedback.positive'}</option><option value='negative'>#{t'feedbacks.feedback.negative'}</option><option value='suggestion'>#{t'feedbacks.feedback.suggestion'}</option>".html_safe, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :feedback %>
    <%= md_simple_editor  do %>
      <%= f.text_area :feedback, class: 'form-control' %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

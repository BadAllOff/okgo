<div class="col-xs-12">
  <div class="row">

    <div class="box">
      <div class="box-header">
        <%= link_to t('feedbacks.feedback.leave_feedback'), new_feedback_path, class: 'btn btn-primary btn-sm pull-right' %>
      </div>

      <div class="box-body">
        <ul class="timeline">
          <li class="time-label">
            <span class="bg-red">
              <%= I18n.l Time.zone.now, format: ("%A, %b %d") %>
            </span>
          </li>
          <% @feedbacks.each do |feedback| %>
              <li>
                <%= feedback_status(feedback.status).html_safe %>
                <div class="timeline-item">
                  <div class="box box-widget">
                    <%= render partial: 'timeline_item', locals: {feedback: feedback} %>
                  </div>
                </div>
              </li>
          <% end %>
        </ul>
      </div>
    </div>

    <%= paginate @feedbacks, window: 2 %>
  </div>
</div>

<div class="col-md-12">

  <div class="box">
    <div class="box-header">
      <%= link_to t('feedbacks.feedback.leave_feedback'), new_feedback_path, class: 'btn btn-primary btn-sm pull-right' %>
    </div>

    <div class="box-body">
      <ul class="timeline">
        <li class="time-label">
          <span class="bg-red">
            <%= I18n.l Time.zone.now, format: ("%A, %b %d") %>
          </span>
        </li>
        <% @feedbacks.each do |feedback| %>
            <li>
              <i class="fa fa-envelope bg-blue"></i>
              <div class="timeline-item">
                <div class="box box-widget">
                  <%= render partial: 'timeline_item', locals: {feedback: feedback} %>
                </div>
              </div>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-bell-o"></i>
    <span class="label label-warning"></span>
  </a>
  <ul class="dropdown-menu" style="width: 340px;">
    <li class="header">You have 10 notifications</li>
    <li>
      <ul class="menu">
        <%= render partial: 'activities/notifications', locals: {activities: @activities} if @activities%>
      </ul>
    </li>

    <li class="footer">
      <%= link_to activities_path do %>
          <i class="fa fa-hourglass-3"></i> <span><%= t 'sidebar_navigation.activities' %></span>
      <% end %>
    </li>
  </ul>
</li>

<li class="dropdown user user-menu">
  <!-- Menu Toggle Button -->
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <!-- The user image in the navbar-->
    <% if @profile && @profile.photo?  %>
        <%= image_tag(@profile.photo.url('micro'), class: "user-image", alt: 'User Image') %>
    <% else %>
        <%= image_tag('micro_missing.png', class: "user-image", alt: 'User Image') %>
    <% end %>
    <!-- hidden-xs hides the username on small devices so only the image appears. -->
    <span class="hidden-xs">
      <%= current_user.email %>
    </span>
  </a>
  <ul class="dropdown-menu">
    <!-- The user image in the menu -->
    <li class="user-header">
      <% if @profile && @profile.photo?  %>
          <%= image_tag(@profile.photo.url('medium'), class: "img-circle", alt: 'User Image') %>
      <% else %>
          <%= image_tag('medium_missing.png', class: "img-circle", alt: 'User Image') %>
      <% end %>
      <p>
        <%= @profile.firstname %> <%= @profile.lastname %>
        <small>Member since <%= current_user.created_at.strftime('%B %d, %Y') %></small>
      </p>
    </li>
    <!-- Menu Body -->
    <li class="user-body">
      <div class="row">
        <div class="col-xs-6 text-center">
          <span class="description-text"><%= t 'profiles.count_events' %></span><br>
          <a href="#"><%= @profile.user.events.count %></a>
        </div>
        <div class="col-xs-6 text-center">
          <span class="description-text"><%= t 'profiles.count_memberships' %></span><br>
          <a href="#"><%= @profile.user.event_memberships.count %></a>
        </div>
      </div>
      <!-- /.row -->
    </li>
    <!-- Menu Footer-->
    <li class="user-footer">
      <div class="pull-left">
        <%= link_to 'Profile', profiles_path, class: 'btn btn-default btn-flat' %>
      </div>
      <div class="pull-right">
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat' %>
      </div>
    </li>
  </ul>
</li>
<!-- post text -->
<%= markdown(event.description) %>
<div class="no-padding">
  <ul class="members-list clearfix"> <!-- members list-->
    <% event.memberships.each do |member| %>
        <li class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
          <% if member.user.profile.photo?  %>
              <%= image_tag(member.user.profile.photo.url('medium'),
                            class: "img-circle",
                            alt: member.user.profile.firstname,
                            data: { original_title: member.user.profile.firstname,
                                    toggle: 'tooltip'
                            }
                  )
              %>
          <% else %>
              <%= image_tag('medium_missing.png', class: "img-circle", alt: 'User Image') %>
          <% end %>
          <%= link_to profile_path(member.user), class: 'members-list-name' do  %>
              <%= member.user.profile.firstname %>
          <% end %>
          <span class="members-list-date"><%= t'profiles.created_at' %>
            <%= I18n.l member.user.created_at, format: (:without_time) %>
              </span>
        </li>
    <% end %>
  </ul>
  <!-- /.members-list -->
</div>
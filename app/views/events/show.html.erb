<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Default Box Example</h3>
  </div><!-- /.box-header -->
  <div class="box-body">

    <p>
      <strong>Language:</strong>
      <%= @event.language.description %>
      <%= image_tag(@event.language.flag_image.url(:micro)) if  @event.language.flag_image? %>
    </p>

    <p>
      <strong>Max participants:</strong>
      <%= @event.max_members %>
    </p>

    <p>
      <strong>Title:</strong>
      <%= @event.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= markdown(@event.description) %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @event.address %>
    </p>

    <p>
      <strong>Starts at:</strong>
      <%= @event.starts_at %>
    </p>

    <p>
      <strong>Ends at:</strong>
      <%= @event.ends_at %>
    </p>

  </div><!-- /.box-body -->
  <div class="box-footer">
    <%= link_to join_event_path(@event), class: 'btn btn-success btn-xs', method: :post do %>
        <i class="fa fa-plus"></i> Join
    <% end %>
    <%= link_to leave_event_path(@event), class: 'btn btn-default btn-xs', method: :delete do %>
        <i class="fa fa-plus"></i> Leave
    <% end %>
    <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-primary' %>
    <%= link_to 'Back', events_path, class: 'btn btn-default pull-right' %>

  </div><!-- box-footer -->
</div><!-- /.box -->





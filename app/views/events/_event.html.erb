<div class="box box-widget collapsed-box event_box" id="event_<%= event.id %>"><!--collapsed-box-->
  <div class="box-header with-border">
  <%= render partial: 'events/event_box_header', locals: { event: event } %>
    <button type="button" class="btn btn-sm" data-widget="collapse" style="background: none;"><%= t('event_memberships.event_description') %> <i class="fa fa-plus"></i>
    </button>
  </div>

  <div class="box-body">
    <%= render partial: 'events/event_box_body', locals: { event: event } %>
  </div>

  <div class="box-footer">
    <%= render partial: 'events/event_box_footer', locals: { event: event } %>
  </div>

  <div class="box-footer box-comments">
    <% event.comments.each do |comment| %>
        <div class="box-comment">
          <%= link_to profile_path(event.user.profile) do %>
              <% if event.user.profile.photo?  %>
                  <%= image_tag(event.user.profile.photo.url('medium'),
                                class: "img-circle img-sm",
                                alt: "#{event.user.profile.firstname} #{event.user.profile.lastname}",
                                data: {
                                    toggle: 'tooltip',
                                    original_title: "#{event.user.profile.firstname} #{event.user.profile.lastname}"
                                }
                      )
                  %>
              <% else %>
                  <%= image_tag('medium_missing.png',
                                class: "img-circle img-sm",
                                alt: "#{event.user.profile.firstname} #{event.user.profile.lastname}"
                      )
                  %>
              <% end %>
          <% end %>

          <div class="comment-text">
                    <span class="username">
                      <%= comment.user.profile.firstname %> <%= comment.user.profile.lastname %>
                      <span class="text-muted pull-right"><%= time_ago_in_words(comment.created_at) %></span>
                    </span>
            <%= comment.body %>
          </div>
        </div>
    <% end %>
  </div>

  <div class="overlay hidden">
    <i class="fa fa-refresh fa-spin"></i>
  </div>
</div>
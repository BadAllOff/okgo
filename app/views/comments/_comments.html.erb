<div class="box-footer box-comments">
  <h6><%= t("comments",count: commentable.comments_count) %></h6>
  <% commentable.comments.each do |comment| %>
      <%= render partial: 'comments/comment', locals: { comment: comment, commentable: commentable } %>
  <% end %>
  <% if user_signed_in? %>
      <div id="accordion" role="tablist" aria-multiselectable="true">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-<%= commentable.id %>" aria-expanded="true" aria-controls="collapseOne" class="btn btn-block btn-xs" style="border-top: 1px solid white;">
          <%= t'comments.leave_a_comment' %>
        </a>
        <div id="collapse-<%= commentable.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
          <div class="box-comment">
            <%= render partial: 'comments/form', locals: { commentable: commentable } %>
          </div>
        </div>
      </div>
  <% end %>
</div>